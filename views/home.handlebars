<main>
    <section class="tarefas">
        {{#each tarefas}}
            <div class="tarefa">
                <form action="">
                    <div>
                        <input type="checkbox" id="tarefa-{{this.id}}">
                        <label for="tarefa-{{this.id}}">{{this.descricao}}</label>
                    </div>

                    <button>
                        <img src="/imagens/x-icon.png" alt="Icone de X para excluir tarefa">
                    </button>
                </form>
            </div>
        {{/each}}
        <div class="informacoes">
            <p>Tarefas Ativas</p>

            <div class="botoes">
                <a href="" class="active">Todas</a>
                <a href="">Ativas</a>
                <a href="">Completas</a>
            </div>

            <a href="">Limpar Tarefas</a>
        </div>
    </section>

    <section class="botoes">
        <a href="" class="active">Todas</a>
        <a href="">Ativas</a>
        <a href="">Completas</a>
    </section>
</main>